{
  "compilerOptions": {
    "target": "es5",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitReturns": true,
    "removeComments": true,
    "module": "commonjs",
    "outDir": "./build",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../../shared/src/*"],
      "@shared": ["../../shared/src/index.ts"]
    },
    "typeRoots": ["./node_modules"],
    "types": ["nakama-runtime"]
  },
  "files": ["./node_modules/nakama-runtime/index.d.ts"],
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "build"]
}
